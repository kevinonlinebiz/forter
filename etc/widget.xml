<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Forter\Forter\Block\Widget\Phone" id="forter_forter_phone">
        <label>Phone Order</label>
        <description>Forter Phone Order</description>
        <parameters>
            <parameter name="span-title" visible="true" xsi:type="text" required="true" sort_order="8">
                <label>Span Title</label>
                <value>Customer webID</value>
            </parameter>
            <parameter name="font-1" visible="true" xsi:type="select" required="true" sort_order="9" source_model="Forter\Forter\Model\Config\Source\FontSelect">
                <label>Font 1 (e.g. #000000)</label>
                <description>Font type ['forter_webId' class]</description>
            </parameter>
            <parameter name="font-2" visible="true" xsi:type="select" required="true" sort_order="10" source_model="Forter\Forter\Model\Config\Source\FontSelect">
                <label>Font 2 (e.g. #000000)</label>
                <description>Font type ['forter_webId' class]</description>
            </parameter>
            <parameter name="color-1" visible="true" xsi:type="text" required="true" sort_order="11">
                <label>Color 1 (e.g. #000000)</label>
                <description>Hex color ['forter_webId' class]</description>
                <value>#1C5A75</value>
            </parameter>
            <parameter name="color-2" visible="true" xsi:type="text" required="true" sort_order="12">
                <label>Color 2 (e.g. #000000)</label>
                <description>Hex color ['forter_code' class]</description>
                <value>#000000</value>
            </parameter>
        </parameters>
    </widget>
</widgets>